script/source = "extends CharacterBody2D

#vars
@export var speed = 0
var og_speed = speed

# ready func
func _ready():
	$AnimatedSprite2D.play(\"idle-ish\")
	hbox_idleish()


# physics prosses
func _physics_process(delta):
	player_movement(delta)
	

# player movement func
func player_movement(delta):
	
	velocity.x = Input.get_action_strength(\"left\") - Input.get_action_strength(\"right\")
	
	# logic
	if velocity.x > 0:
		$AnimatedSprite2D.flip_h = false
		$AnimatedSprite2D.play(\"run\")
		running_right()
	elif velocity.x < 0:
		$AnimatedSprite2D.flip_h = true
		$AnimatedSprite2D.play(\"run\")
		running_left()
	else:
		$AnimatedSprite2D.play(\"idle-ish\")
		hbox_idleish()
	
	move_and_collide(velocity * speed * speed * delta)

# which hitboxes are being used
func running_right():
	$running_right.visible = true
	$running_left.visible = false
	$idle_hbox.visible = false
func running_left():
	$running_right.visible = false
	$running_left.visible = true
	$idle_hbox.visible = false
func hbox_idleish():
	$running_right.visible = false
	$running_left.visible = false
	$idle_hbox.visible = true
"


script/source = "extends CharacterBody2D

#vars
@export var speed = 0
var og_speed = speed
@export var gravity = 30
@export var maxfallspeed = 1000
@export var jump_force = 500
var can_jump = false 

# ready func
func _ready():
	$AnimatedSprite2D.play(\"idle-ish\")
	hbox_idleish()


# physics prosses
func _physics_process(delta):
	player_movement(delta)
	

# player movement func
func player_movement(delta):
	
	if can_jump == false:
		velocity.y += gravity
	if velocity.y > maxfallspeed:
		velocity.y = maxfallspeed
	if Input.get_action_strength(\"up\") and can_jump:
		velocity.y = -jump_force
		can_jump = false
	
	
	velocity.x = Input.get_action_strength(\"right\") - Input.get_action_strength(\"left\")
	
	# logic
	if velocity.x > 0:
		$AnimatedSprite2D.flip_h = false
		$AnimatedSprite2D.play(\"run\")
		running_right()
	elif velocity.x < 0:
		$AnimatedSprite2D.flip_h = true
		$AnimatedSprite2D.play(\"run\")
		running_left()
	else:
		$AnimatedSprite2D.play(\"idle-ish\")
		hbox_idleish()
	
	velocity.x *= speed * speed
	
	move_and_slide()

# which hitboxes are being used
func running_right():
	$running_right.visible = true
	$running_left.visible = false
	$idle_hbox.visible = false
func running_left():
	$running_right.visible = false
	$running_left.visible = true
	$idle_hbox.visible = false
func hbox_idleish():
	$running_right.visible = false
	$running_left.visible = false
	$idle_hbox.visible = true


func _on_area_2d_area_entered(area):
	if area.has_method(\"ground\"):
		can_jump = true


func _on_area_2d_area_exited(area):
	if area.has_method(\"ground\"):
		can_jump = false
"

